<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>,
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/@*modernizr")
    @RenderSection("scripts",required:false)

    <style>

        .Sign {
            float: right;
        }
    </style>

</head>
<body>
  
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dynamic Website", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    <li id="CMS">@Html.ActionLink("Add Post", "AddPost", "Home")</li>
                    <li id="CMS1">@Html.ActionLink("All Posts", "AllPosts", "Home")</li>
                    <li id="CMS2">@Html.ActionLink("New User", "NewUser", "CRUD")</li>
                </ul>
       
                <div id="signin" class="Sign">
                    @Html.ActionLink("Sign In", "Login", "Home")<br />
                </div>
                <br />
                <div style="float:right"> @Html.ActionLink("Sign Out", "LogOut", "Home")</div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dynamic Web Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>
